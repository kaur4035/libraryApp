<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:text="Search By"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/spinner"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnsearch"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toTopOf="@+id/btnsearch"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="118dp"
        android:layout_height="47dp"
        android:text="Search For"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@+id/editSearchFor"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.732"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnsearch" />

    <EditText
        android:id="@+id/editSearchFor"
        android:layout_width="216dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.857"
        android:layout_marginRight="-19dp"
        app:layout_constraintRight_toRightOf="@+id/spinner" />

    <Button
        android:id="@+id/btnsearch"
        android:layout_width="119dp"
        android:layout_height="53dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="161dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btncancel"
        android:layout_width="122dp"
        android:layout_height="55dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="159dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/btnsearch"
        android:layout_marginLeft="98dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use the below fields to search for book"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="61dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/editSearchFor"
        app:layout_constraintHorizontal_bias="0.562" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="215dp"
        android:layout_height="47dp"
        android:entries="@array/book_search_array"
        android:prompt="@string/book_search_prompt"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toTopOf="@+id/btncancel"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="-38dp"
        app:layout_constraintRight_toRightOf="@+id/btncancel"
        />

</android.support.constraint.ConstraintLayout>